#!/usr/bin/env bash
# Scrape papers from configured sources and build the vector database.
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

echo "==> Scraping papers..."
python "$SCRIPT_DIR/main.py" scrape "$@"

echo ""
echo "==> Building vector database..."
python "$SCRIPT_DIR/main.py" vectorize "$@"
