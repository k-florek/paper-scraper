{
  "search": {
    "keywords": [
      "bioinformatics",
      "genomics",
      "microbiology"
    ],
    "boolean_operator": "AND",
    "date_range": {
      "start": "2023/01/01",
      "end": "2026/01/01"
    },
    "max_results": 50
  },
  "sources": {
    "pubmed": {
      "enabled": true,
      "email": "your@email.com",
      "api_key": ""
    },
    "google_scholar": {
      "enabled": true,
      "use_proxy": false,
      "proxy": ""
    }
  },
  "output": {
    "db_path": "results/papers.db"
  },
  "filters": {
    "language": "english",
    "article_types": ["journal article", "review"],
    "min_citations": 0
  },
  "vectorize": {
    "ollama_host": "http://localhost:11434",
    "embedding_model": "nomic-embed-text",
    "chroma_path": "results/chroma",
    "collection_name": "papers",
    "batch_size": 10
  },
  "chat": {
    "ollama_host": "http://localhost:11434",
    "chat_model": "llama3",
    "embedding_model": "nomic-embed-text",
    "top_k": 5,
    "system_prompt": "You are a helpful academic research assistant. You have access to a curated database of scientific papers. When the user asks about a topic, relevant papers from the database will be provided as context. Introduce each suggested paper, explain why it is relevant, and highlight key findings. Be concise and scholarly. Do not fabricate papers or citations outside the provided context."
  }
}